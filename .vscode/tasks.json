{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "start server",
            "type": "npm",
            "script": "start",
            "isBackground": true,
            "options": {
                "env": {
                    "VERSION": "Local build"
                }
            },
            "problemMatcher": {
                "pattern": {
                    "regexp": "Ë†$"
                },
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": "Compiling...",
                    "endsPattern": "Compiled .*"
                }
            }
        },
        {
          "label": "stop server",
          "command": "echo ${input:terminate}",
          "type": "shell"
        }
    ],
    "inputs": [
      {
        "id": "terminate",
        "type": "command",
        "command": "workbench.action.tasks.terminate",
        "args": "terminateAll"
      }
    ]
}