    "version": "0.2.0",
    "configurations": [
        {
            "type": "msedge",
            "request": "launch",
            "name": "Launch Client (Edge)",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "url": "http://localhost:8080",
            "webRoot": "${workspaceFolder}",
            "preLaunchTask": "start server",
            "postDebugTask": "stop server"
        },
        {
            "type": "chrome",
            "request": "launch",
            "name": "Launch Client (Chrome)",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "url": "http://localhost:8080",
            "webRoot": "${workspaceFolder}",
            "preLaunchTask": "start server",
            "postDebugTask": "stop server"
        }
    ]
}